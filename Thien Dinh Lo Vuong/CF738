n = int(input("Nhập số lượng phần tử của dãy A: "))
A = []
for i in range(n):
    x = int(input(f"Nhập phần tử thứ" +str(i+1)+ ": "))
    A.append(x)
dem_chan = 0
for x in A:
    if x % 2 == 0:
        dem_chan += 1

print("Số phần tử chẵn trong dãy =", dem_chan)
tong_le = 0
for x in A:
    if x % 2 != 0:
        tong_le += 1
print("Tổng các phần tử lẻ trong dãy =", tong_le)
tong_am = 0
for x in A:
    if x < 0:
        tong_am += x

print("Tổng các phần tử âm trong dãy =", tong_am)